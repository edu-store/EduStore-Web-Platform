.Resource__detail
    max-width max-width
    padding padding__container
    display flex
    flex-direction row
    justify-content left
    margin 0 auto
.Resource__detail__Container
    overflow hidden
    border-radius 50px
    cursor pointer
    margin-right 2em

.Resource__detail__logo
    width 15em
    height 15em

.Resource__detail__title
    font-size font-size-titles
    color color__dark
    margin-bottom .3em

.Resource__detail__subtitle
    font-size font-size-subtitles
    color colorBlue
    margin-bottom .3em

.screenshot-section
    margin 1em 1em
.screenshot-section-container
    max-width max-width
    padding padding__container
    margin 0 auto
    border-top 1px solid dark__grey
    border-bottom 1px solid dark__grey
    & figure > img 
        border-radius border-radius
        margin-right .5em
        height 31em
        width auto
.screenshot-container-imgs
    display flex
    flex-direction row
    overflow scroll 
.info-detail-container
    max-width max-width
    padding padding__container
    margin 0 auto
    & h1
        color color__dark
        margin-bottom .5em
    & p
        color colorBlue
.list_container
    & li
        color colorBlue
        padding .5em
.container__rating
    margin-bottom 5em
        

@media screen and (max-width 425px)
    .Resource__detail__logo
        width: auto
        height: 100%
    .Resource__detail__Container
        width: 12em
        height: 10em
        border-radius: 25px
    .screenshot-section-container figure > img
        margin-right: 0.5em;
        height: 20em;
        width: auto;
@media screen and (max-width 320px)
    .Resource__detail__Container
        width: 12em
        height: 7em
    .screenshot-section-container figure > img
        margin-right: 0.5em;
        height: 20em;
        width: auto;


    
    


